<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsj.Mapper.TestInfoMapper">

    <resultMap id="BaseTestInfo" type="com.tsj.project.TestInfo">
        <id property="id" column="id" jdbcType="INTEGER"></id>
        <result property="majorId" column="major_id" jdbcType="INTEGER"></result>
        <result property="name" column="name" jdbcType="VARCHAR"></result>
        <result property="state" column="state" jdbcType="VARCHAR"></result>
        <result property="plan" column="plan" jdbcType="VARCHAR"></result>
        <result property="place" column="place" jdbcType="VARCHAR"></result>
        <result property="start" column="start" jdbcType="VARCHAR"></result>
        <result property="when" column="when" jdbcType="VARCHAR"></result>
    </resultMap>

    <resultMap id="TestInfoWithMajors" type="com.tsj.project.TestInfo" extends="BaseTestInfo">
        <association property="majorInfo2" javaType="com.tsj.project.MajorInfo2">
            <id property="id" column="major2_id" jdbcType="INTEGER"/>
            <result property="name" column="major2_name" jdbcType="VARCHAR"/>
            <result property="major" column="major2_major" jdbcType="VARCHAR"/>
            <result property="year" column="major2_year" jdbcType="VARCHAR"/>
            <result property="term" column="major2_term" jdbcType="VARCHAR"/>
            <result property="credit" column="major2_credit" jdbcType="INTEGER"/>
            <result property="state" column="major2_state" jdbcType="VARCHAR"/>
        </association>
        <association property="majorInfo3" javaType="com.tsj.project.MajorInfo3">
            <id property="id" column="major3_id" jdbcType="INTEGER"/>
            <result property="name" column="major3_name" jdbcType="VARCHAR"/>
            <result property="major" column="major3_major" jdbcType="VARCHAR"/>
            <result property="year" column="major3_year" jdbcType="VARCHAR"/>
            <result property="term" column="major3_term" jdbcType="VARCHAR"/>
            <result property="credit" column="major3_credit" jdbcType="INTEGER"/>
            <result property="state" column="major3_state" jdbcType="VARCHAR"/>
        </association>
    </resultMap>

    <select id="getTestInfo" resultMap="BaseTestInfo">
        select * from test_info
    </select>

    <select id="getTestInfoWithMajors" resultMap="TestInfoWithMajors">
        select t.*,
               m2.id as major2_id, m2.name as major2_name, m2.major as major2_major, m2.year as major2_year, m2.term as major2_term, m2.credit as major2_credit, m2.state as major2_state,
               m3.id as major3_id, m3.name as major3_name, m3.major as major3_major, m3.year as major3_year, m3.term as major3_term, m3.credit as major3_credit, m3.state as major3_state
        from test_info t
        left join major_info2 m2 on 1=1
        left join major_info3 m3 on 1=1
    </select>

    <insert id="insertTestInfo" parameterType="com.tsj.project.TestInfo">
        insert into test_info(major_id, name, state, plan, place, start, `when`)
        values(#{majorId}, #{name}, #{state}, #{plan}, #{place}, #{start}, #{when})
    </insert>

    <update id="updateTestInfo" parameterType="com.tsj.project.TestInfo">
        update test_info set major_id = #{majorId}, name = #{name}, state = #{state},
        plan = #{plan}, place = #{place}, start = #{start}, `when` = #{when} where id = #{id}
    </update>

    <delete id="deleteTestInfo" parameterType="java.lang.Integer">
        delete from test_info where id = #{id}
    </delete>

    <select id="getTestInfoById" parameterType="java.lang.Integer" resultMap="BaseTestInfo">
        select * from test_info where id = #{id}
    </select>

    <select id="getTestInfoByMajorId" parameterType="java.lang.Integer" resultMap="TestInfoWithMajors">
        select t.*,
               m2.id as major2_id, m2.name as major2_name, m2.major as major2_major, m2.year as major2_year, m2.term as major2_term, m2.credit as major2_credit, m2.state as major2_state,
               m3.id as major3_id, m3.name as major3_name, m3.major as major3_major, m3.year as major3_year, m3.term as major3_term, m3.credit as major3_credit, m3.state as major3_state
        from test_info t
        left join major_info2 m2 on 1=1
        left join major_info3 m3 on 1=1
        where t.major_id = #{majorId}
    </select>

</mapper> 